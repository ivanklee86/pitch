{{!--Re-usable card in timeline style for linking to posts--}}

<article class="gh-timeline-card {{post_class}}{{#is "post"}} gh-read-next-post{{/is}}" data-date="{{date}}">
    <div class="gh-timeline-card-time-line-container">
        <div class="gh-timeline-card-date">
            <span class="gh-timeline-card-day">
                <time datetime="{{date format="DD"}}">{{date format="DD"}}</time>
            </span>
            <span class="gh-timeline-card-month-year">
                <time datetime="{{date format="MMM, YY"}}">{{date format="MMM, YY"}}</time>
            </span>
        </div>
        <hr class="gh-timeline-card-time-line">
    </div>
    <div class="gh-timeline-card-main">
        <div class="gh-timeline-card-content">
            {{#if authors}}
            <div class="gh-timeline-card-authors">
                <span>{{t "By"}}</span>
                {{#primary_author}}
                <a class="gh-card-author" href="{{url}}">{{name}}</a>
                {{/primary_author}}
            </div>
            {{/if}}
            <h2 class="gh-timeline-card-title">
                <a class="gh-timeline-card-title-link" href="{{url}}" aria-label="{{title}} {{t "post link"}}">
                    {{title}}
                </a>
            </h2>
            <div class="gh-timeline-card-tags">{{#if featured}}
                <div class="gh-tag-icon featured-tag" role="note" aria-label="{{t "Featured post tag"}}">
                    {{> 'icons/lightning'}}
                </div>
                {{/if}}
                {{^match visibility 'public'}}
                <div class="gh-tag-icon private-tag" role="note" aria-label="{{t "Private post tag"}}">
                    {{> 'icons/lock-small'}}
                </div>
                {{/match}}
                {{#foreach tags}}
                <a class="gh-tag" href="{{url}}" aria-label="{{name}} {{t "tag link"}}">
                    {{name}}
                </a>
                {{/foreach}}</div>
        </div>
        <div class="gh-card-image-video-outer">
            <div class="gh-card-img-video-wrapper">
                {{#if feature_image}}
                <a class="gh-card-image-wrapper-link" href="{{url}}" aria-label="{{title}} {{t "post link"}}">
                    <picture>
                        <source srcset="{{img_url feature_image size="2000" format="webp" }} 2000w, {{img_url feature_image size="1600"
                            format="webp" }} 1600w, {{img_url feature_image size="1000" format="webp" }} 1000w, {{img_url feature_image
                            size="800" format="webp" }} 800w, {{img_url feature_image size="600" format="webp" }} 600w, {{img_url
                            feature_image size="500" format="webp" }} 500w, {{img_url feature_image size="300" format="webp" }} 300w" sizes="(min-width: 1681px) 900px, 70vw" type="image/webp">
                        <img class="gh-card-image" srcset="{{img_url feature_image size="2000"}} 2000w, {{img_url feature_image size="1600"
                            }} 1600w, {{img_url feature_image size="1000" }} 1000w, {{img_url feature_image size="800" }} 800w, {{img_url
                            feature_image size="600" }} 600w, {{img_url feature_image size="500" }} 500w, {{img_url feature_image size="300" }} 300w"
                            sizes="(max-width: 1150px) 70vw, (min-width: 1681px) 900px, 55vw" src="{{img_url feature_image size="2000"}}"
                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}} {{t "post image"}}{{/if}}" loading="lazy">
                    </picture>
                </a>
                {{else}}
                <a class="gh-card-image-wrapper-link--noImage" href="{{url}}" aria-label="{{title}} {{t "post link"}}">
                    {{#if @site.logo}}
                    {{#if @custom.dark_mode_logo}}
                    <img src="{{img_url @custom.dark_mode_logo}}" alt="{{@site.title}} {{t "icon"}}"
                        class="gh-card-image-wrapper-link--noImage__logo-dark">
                    {{/if}}
                    <img src="{{img_url @site.logo}}" alt="{{@site.title}} {{t "icon"}}"
                        class="gh-card-image-wrapper-link--noImage__logo">
                    {{else}}
                    <h2 class="gh-card-image-wrapper-link--noImage__name">{{@site.title}}</h3>
                        {{/if}}
                </a>
                {{/if}}
                {{#has tag="#video"}}
                <div class="gh-card-video-wrapper">
                    {{content}}
                </div>
                <a class="gh-card-video-link" href="{{url}}" aria-label="{{title}} {{t "post link"}}"></a>
                {{/has}}
            </div>
        </div>
    </div>
</article>