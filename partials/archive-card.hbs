{{!-- Reusable Card for Archive Pages (Authors and Categories) --}}

<div class="gh-archive-card">
    {{#if feature_image}}
    <picture>
        <source srcset="{{img_url feature_image size="800" format="webp" }} 800w, {{img_url feature_image size="600"
            format="webp" }} 600w, {{img_url feature_image size="500" format="webp" }} 500w, {{img_url feature_image
            size="300" format="webp" }} 300w, {{img_url feature_image size="200" format="webp" }} 200w"
            sizes="(max-width: 900px) 45vw, (max-width: 1150px) 30vw, (max-width: 1679px) 23vw, (min-width: 1680px) 376px"
            type="image/webp">
        <img class="gh-archive-card-image" srcset="{{img_url feature_image size="800"}} 800w, {{img_url feature_image
            size="600" }} 600w, {{img_url feature_image size="500" }} 500w, {{img_url feature_image size="300" }} 300w,
            {{img_url feature_image size="200" }} 200w"
            sizes="(max-width: 900px) 45vw, (max-width: 1150px) 30vw, (max-width: 1679px) 23vw, (min-width: 1680px) 376px"
            src="{{img_url feature_image size="800"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}} {{t "feature image"}}{{/if}}" loading="lazy">
    </picture>
    {{else if profile_image}}
    <picture>
        <source srcset="{{img_url profile_image size="800" format="webp" }} 800w, {{img_url profile_image size="600"
            format="webp" }} 600w, {{img_url profile_image size="500" format="webp" }} 500w, {{img_url profile_image
            size="300" format="webp" }} 300w, {{img_url profile_image size="200" format="webp" }} 200w"
            sizes="(max-width: 900px) 45vw, (max-width: 1150px) 30vw, (max-width: 1679px) 23vw, (min-width: 1680px) 376px"
            type="image/webp">
        <img class="gh-archive-card-image" srcset="{{img_url profile_image size="800"}} 800w, {{img_url profile_image
            size="600" }} 600w, {{img_url profile_image size="500" }} 500w, {{img_url profile_image size="300" }} 300w,
            {{img_url profile_image size="200" }} 200w"
            sizes="(max-width: 900px) 45vw, (max-width: 1150px) 30vw, (max-width: 1679px) 23vw, (min-width: 1680px) 376px"
            src="{{img_url profile_image size="800"}}" alt="{{name}} {{t "cover image"}}" loading="lazy">
    </picture>
    {{else}}
    <div class="gh-archive-card-image-plug"></div>
    {{/if}}
    <a class="gh-archive-card-content" href="{{url}}" aria-label="{{title}} {{t "card link"}}">
        <div class="gh-archive-card-top">
            <span class="gh-archive-card-posts-count">
                {{plural count.posts empty=(t "No Posts") singular=(t "% Post") plural=(t "% Posts")}}
            </span>
            {{#if location}}
            <div class="gh-archive-card-location">
                {{>icons/location-marker}}
                <span class="gh-archive-card-location-name">{{location}}</span>
            </div>
            {{/if}}
        </div>
        <h2 class="gh-archive-card-title">{{name}}</h2>
    </a>
</div>