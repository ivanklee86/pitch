                {{#get "posts" limit="3" filter="featured:true" include="tags,authors" order="published_at desc"}}
                {{#foreach posts}}
                <div class="gh-small-slider-slide swiper-slide">
                    {{#if feature_image}}
                    <div class="gh-small-slider-slide-image-wrapper">
                        <picture>
                            <source srcset="{{img_url feature_image size="2000" format="webp" }} 2000w, {{img_url feature_image size="1600"
                                format="webp" }} 1600w, {{img_url feature_image size="1200" format="webp" }} 1200w, {{img_url feature_image
                                size="1000" format="webp" }} 1000w, {{img_url feature_image size="800" format="webp" }} 800w, {{img_url
                                feature_image size="500" format="webp" }} 500w" sizes="(max-width: 1100px) 95vw, (max-width: 1679px) 62vw, (min-width: 1680px) 1056px"
                                type="image/webp">
                            <img class="gh-small-slider-slide-image" srcset="{{img_url feature_image size="2000" }} 2000w, {{img_url feature_image
                                size="1600" }} 1600w, {{img_url feature_image size="1200" }} 1200w, {{img_url feature_image size="1000" }} 1000w,
                                {{img_url feature_image size="800" }} 800w, {{img_url feature_image size="500" }} 500w"
                                sizes="(max-width: 1100px) 95vw, (max-width: 1679px) 62vw, (min-width: 1680px) 1056px"
                                src="{{img_url feature_image size="2000"}}"
                                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}} {{t "post image"}}{{/if}}">
                        </picture>
                    </div>
                    {{else}}
                    <div class="gh-small-slider-slide-noImage" aria-label="{{title}} {{t "post link"}}"></div>
                    {{/if}}
                    <a class="gh-small-slider-slide-content parallax-bg" href="{{url}}" data-swiper-parallax="-23%">
                        <div class="gh-small-slider-slide-meta">
                            {{#if authors}}
                            <div class="gh-small-slider-slide-authors">
                                <span>{{t "By"}}</span>
                                {{#primary_author}}
                                <span class="gh-small-slider-slide-author">{{name}}</span>
                                {{/primary_author}}
                            </div>
                            {{/if}}
                            <span class="gh-small-slider-slide-date">
                                <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="MMM D, YYYY"}}</time>
                            </span>
                        </div>
                        <h2 class="gh-small-slider-slide-title">{{title}}</h2>
                        {{#if excerpt}}
                        <p class="gh-small-slider-slide-excerpt">{{excerpt}}</p>
                        {{/if}}
                        {{#if tags}}
                        <div class="gh-small-slider-slide-tags">
                            {{#if featured}}
                            <div class="gh-transparent-tag-icon featured-tag" role="note"
                                aria-label="{{t "Featured post tag"}}">
                                {{> 'icons/lightning'}}
                            </div>
                            {{/if}}
                            {{^match visibility 'public'}}
                            <div class="gh-transparent-tag-icon private-tag" role="note" aria-label="{{t "Private post tag"}}">
                                {{> 'icons/lock-small'}}
                            </div>
                            {{/match}}
                            {{#foreach tags}}
                            <div class="gh-transparent-tag">
                                {{name}}
                            </div>
                            {{/foreach}}
                        </div>
                        {{/if}}
                    </a>
                </div>
                {{/foreach}}
                {{/get}}
            </div>
            <div class="gh-small-slider-pagination"></div>
        </div>
        <button class="gh-small-slider-button-prev">
            {{>icons/chevron-left}}
        </button>
        <button class="gh-small-slider-button-next">
            {{>icons/chevron-right}}
        </button>
    </div>
    {{/match}}

