<section class="gh-featured-posts-section{{#match @custom.featured_posts " Large Slider" }} large-slider{{/match}}">

    {{!-- MEDIUM SLIDER SECTION --}}

    {{#match @custom.featured_posts "Medium Slider" }}
    <div class="gh-medium-slider-container gh-container">
        <div class="gh-medium-slider swiper">
            <div class="gh-medium-slider-wrapper swiper-wrapper">
                {{#get "posts" limit="3" filter="featured:true" include="tags,authors" order="published_at desc"}}
                {{#foreach posts}}
                <div class="gh-medium-slider-slide swiper-slide">
                    {{#if feature_image}}
                    <div class="gh-medium-slider-slide-image-wrapper">
                        <picture>
                            <source srcset="{{img_url feature_image size="3000" format="webp" }} 3000w, {{img_url feature_image size="2400"
                                format="webp" }} 2400w, {{img_url feature_image size="1600" format="webp" }} 1600w, {{img_url feature_image
                                size="1000" format="webp" }} 1000w, {{img_url feature_image size="800" format="webp" }} 800w, {{img_url
                                feature_image size="500" format="webp" }} 500w" sizes="(min-width: 1680px) 1600px, 95vw" type="image/webp">
                            <img class="gh-medium-slider-slide-image" srcset="{{img_url feature_image size="3000" }} 3000w, {{img_url feature_image
                                size="2400" }} 2400w, {{img_url feature_image size="1600" }} 1600w, {{img_url feature_image size="1000" }} 1000w,
                                {{img_url feature_image size="800" }} 800w, {{img_url feature_image size="500" }} 500w"
                                sizes="(min-width: 1680px) 1600px, 95vw" src="{{img_url feature_image size="3000"}}"
                                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}} {{t "post image"}}{{/if}}">
                        </picture>
                    </div>
                    {{else}}
                    <div class="gh-medium-slider-slide-noImage"></div>
                    {{/if}}
                    <a class="gh-medium-slider-slide-content parallax-bg" href="{{url}}" data-swiper-parallax="-25%">
                        <div class="gh-medium-slider-slide-meta">
                            {{#if authors}}
                            <div class="gh-medium-slider-slide-authors">
                                <span class="gh-medium-slider-slide-authors-span">{{t "By"}}</span>
                                {{#primary_author}}
                                    <span class="gh-medium-slider-slide-author">{{name}}</span>
                                {{/primary_author}}
                            </div>
                            {{/if}}
                            <span class="gh-medium-slider-slide-date">
                                <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="MMM D, YYYY"}}</time>
                            </span>
                        </div>
                        <h2 class="gh-medium-slider-slide-title">{{title}}</h2>
                        {{#if excerpt}}
                        <p class="gh-medium-slider-slide-excerpt">{{excerpt}}</p>
                        {{/if}}
                        {{#if tags}}
                        <div class="gh-medium-slider-slide-tags">
                            {{#if featured}}
                            <div class="gh-transparent-tag-icon featured-tag" role="note"
                                aria-label="{{t "Featured post tag"}}">
                                {{> 'icons/lightning'}}
                            </div>
                            {{/if}}
                            {{^match visibility 'public'}}
                            <div class="gh-transparent-tag-icon private-tag" role="note" aria-label="{{t "Private post tag"}}">
                                {{> 'icons/lock-small'}}
                            </div>
                            {{/match}}
                            {{#foreach tags}}
                            <div class="gh-transparent-tag">
                                {{name}}
                            </div>
                            {{/foreach}}
                        </div>
                        {{/if}}
                    </a>
                </div>
                {{/foreach}}
                {{/get}}
            </div>
            <div class="gh-medium-slider-pagination"></div>
        </div>
        <button class="gh-medium-slider-button-prev">
            {{>icons/chevron-left}}
        </button>
        <button class="gh-medium-slider-button-next">
            {{>icons/chevron-right}}
        </button>
    </div>
    {{/match}}

    {{!-- TILES SECTION --}}

