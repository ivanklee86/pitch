                                <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="MMM D, YYYY"}}</time>
                            </span>
                        </div>
                        <a class="gh-large-slider-slide-title-link" href="{{url}}">
                            <h2 class="gh-large-slider-slide-title">
                                {{title}}
                            </h2>
                        </a>
                        {{#if excerpt}}
                        <p class="gh-large-slider-slide-excerpt">{{excerpt}}</p>
                        {{/if}}
                        {{#if tags}}
                        <div class="gh-large-slider-slide-tags">
                            {{#if featured}}
                            <div class="gh-transparent-tag-icon featured-tag" role="note"
                                aria-label="{{t "Featured post tag"}}">
                                {{> 'icons/lightning'}}
                            </div>
                            {{/if}}
                            {{^match visibility 'public'}}
                            <div class="gh-transparent-tag-icon private-tag" role="note" aria-label="{{t "Private post tag"}}">
                                {{> 'icons/lock-small'}}
                            </div>
                            {{/match}}
                            {{#foreach tags}}
                            <a href="{{url}}" class="gh-transparent-tag gh-transparent-tag--link">
                                {{name}}
                            </a>
                            {{/foreach}}
                        </div>
                        {{/if}}
                    </div>
                </div>
                {{/foreach}}
                {{/get}}
            </div>
            <div class="gh-large-slider-pagination"></div>
        </div>
        <button class="gh-large-slider-button-prev">
            {{>icons/chevron-left}}
        </button>
        <button class="gh-large-slider-button-next">
            {{>icons/chevron-right}}
        </button>
    </div>
    {{/match}}

