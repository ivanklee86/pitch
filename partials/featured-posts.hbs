                                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}} {{t "post image"}}{{/if}}">
                            </picture>
                        </a>
                        {{else}}
                        <a class="gh-featured-tiles-post-noImage" href="{{url}}" aria-label="{{title}} {{t "post link"}}">
                            {{#if @site.logo}}
                            {{#if @custom.dark_mode_logo}}
                            <img src="{{img_url @custom.dark_mode_logo}}" alt="{{@site.title}} {{t "icon"}}"
                                class="gh-featured-tiles-post-noImage__logo-dark">
                            {{/if}}
                            <img src="{{img_url @site.logo}}" alt="{{@site.title}} {{t "icon"}}"
                                class="gh-featured-tiles-post-noImage__logo">
                            {{else}}
                            <h3 class="gh-featured-tiles-post-noImage__name">{{@site.title}}</h3>
                            {{/if}}
                        </a>
                        {{/if}}
                    </div>
                    {{/foreach}}
                </div>
                {{/get}}
            </div>
        </div>
    </div>
    {{/match}}

