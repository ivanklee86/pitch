                                    <span>{{t "By"}}</span>
                                    {{#primary_author}}
                                    <a class="gh-featured-tiles-post-author" href="{{url}}">{{name}}</a>
                                    {{/primary_author}}
                                </div>
                                {{/if}}
                                <span class="gh-featured-tiles-post-date">
                                    <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="MMM D, YYYY"}}</time>
                                </span>
                            </div>
                            <a class="gh-featured-tiles-post-title-link" href="{{url}}">
                                <h2 class="gh-featured-tiles-post-title">{{title}}</h2>
                            </a>
                            {{#if tags}}
