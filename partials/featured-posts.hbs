                                {{#if featured}}
                                <div class="gh-tag-icon featured-tag" role="note" aria-label="{{t "Featured post tag"}}">
                                    {{> 'icons/lightning'}}
                                </div>
                                {{/if}}
                                {{^match visibility 'public'}}
                                <div class="gh-tag-icon private-tag" role="note" aria-label="{{t "Private post tag"}}">
                                    {{> 'icons/lock-small'}}
                                </div>
                                {{/match}}
                                {{#foreach tags}}
                                <a class="gh-tag" href="{{url}}" aria-label="{{name}} {{t "tag link"}}">
                                    {{name}}
                                </a>
                                {{/foreach}}
                            </div>
                            {{/if}}
                        </div>
                        {{#if feature_image}}
                        <a class="gh-featured-tiles-post-image-wrapper" href="{{url}}">
                            <picture>
                                <source srcset="{{img_url feature_image size="600" format="webp" }} 600w, {{img_url feature_image size="500"
                                    format="webp" }} 500w, {{img_url feature_image size="300" format="webp" }} 300w, {{img_url feature_image
                                    size="200" format="webp" }} 200w" sizes=" (max-width: 550px) 33vw, (max-width: 750px) 180px, (max-width:
                                    1100px) 277px, (max-width: 1250px) 230px, (max-width: 1480px) 250px, (min-width: 1481px) 277px"
                                    type="image/webp">
                                <img class="gh-featured-tiles-post-image" srcset="{{img_url feature_image size="600" }} 600w, {{img_url
                                    feature_image size="500" }} 500w, {{img_url feature_image size="300" }} 300w, {{img_url feature_image size="200"
                                    }} 200w"
                                    sizes="(max-width: 550px) 33vw, (max-width: 750px) 180px, (max-width: 1100px) 277px, (max-width: 1250px) 230px, (max-width: 1480px) 250px, (min-width: 1481px) 277px"
